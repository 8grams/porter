---
import Layout from "./Layout.astro";
const { pageTitle } = Astro.props;
---

<Layout pageTitle={pageTitle}>
  <nav class="w-full bg-white shadow-md">
    <div class="flex justify-between items-center px-6 py-6">
      <ul
        class="flex items-center gap-6"
        x-data="{ current: window.location.pathname }"
      >
        <li>
          <a
            :class="current === '/dashboard/resources' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/resources"
          >
            Resource
          </a>
        </li>
        <li>
          <a
            :class="current === '/dashboard/superuser-keys' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/superuser-keys">Superuser Keys</a
          >
        </li>
        <li>
          <a
            :class="current === '/dashboard/shared-keys' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/shared-keys">Shared Keys</a
          >
        </li>
        <li>
          <a
            :class="current === '/dashboard/shared-with-you' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/shared-with-you">Shared with you</a
          >
        </li>
        <li>
          <a
            :class="current === '/dashboard/settings' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/settings">Settings</a
          >
        </li>
      </ul>

      <div class="relative" x-data="{ open: false }">
        <button class="btn btn-ghost" @click="open = !open">
          @8grams
          <svg
            class="ml-2 w-4 h-4 transition-transform"
            :class="open ? 'rotate-180' : ''"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <ul
          class="menu menu-md dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52 absolute right-0 z-50"
          x-show="open"
          x-transition
          @click.outside="open = false"
          x-cloak
        >
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <main class="py-6 px-6">
    <slot name="content" />
  </main>
</Layout>
<slot name="dialog" />
<slot name="script" />
