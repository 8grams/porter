---
const { error } = Astro.props;
const url = new URL(Astro.request.url);
const getParentPage = url.pathname.lastIndexOf('/') ? url.pathname.substring(0, url.pathname.lastIndexOf('/')) : '/';
console.error(error)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>500 - Server Error</title>
  </head>
  <body
    style="
    margin:0;
    padding:0;
    font-family: Arial, Helvetica, sans-serif;
    background: linear-gradient(to bottom right, #f3f4f6, #fafafa, #fff);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  "
  >
    <div
      style="
      background: white;
      padding: 4rem;
      border-radius: 1.5rem;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      text-align: center;
      max-width: 800px;
    "
    >
      <h1
        style="
        font-size: 4rem;
        color: #1f2937;
        margin-bottom: 2rem;
        user-select: none;
      "
      >
        500 - Server Error
      </h1>
      <p
        style="
        color: #374151;
        font-size: 1.25rem;
        margin-bottom: 2rem;
      "
      >
        Sorry, something went wrong on our end. Please try again later.
      </p>
      <a
        href={getParentPage}
        style="
        display: inline-block;
        padding: 1rem 2rem;
        background-color: #1f2937;
        color: white;
        border-radius: 9999px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.2s ease;
      "
        onmouseover="this.style.backgroundColor='#111827'"
        onmouseout="this.style.backgroundColor='#1f2937'"
      >
        Back to Home
      </a>
    </div>
  </body>
</html>
